<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Organigramme Kyndryl</title>
    <link rel="stylesheet" href="/organigramme.css">
</head>
<body>
    <div class="container">
        <h1 class="title"><%= organigramme.titre %></h1>
        
        <div class="organigramme-wrapper">
            <!-- Contenu hiérarchique -->
            <div class="organigramme">
                <% organigramme.niveaux.forEach((niveau, index) => { %>
                    <!-- Niveau <%= index + 1 %>: <%= niveau.titre %> -->
                    <div class="level">
                        <% if (niveau.couleur === 'mixed') { %>
                            <!-- Niveau équipes avec couleurs différentes -->
                            <div class="team-container">
                                <% niveau.membres.forEach((membre, membreIndex) => { %>
                                    <div class="box team-box" style="background-color: <%= membre.couleur %>; border: 2px solid #333;">
                                        <div class="box-name"><%= membre.nom %></div>
                                        <div class="box-poste"><%= membre.poste %></div>
                                    </div>
                                    <% if (membreIndex < niveau.membres.length - 1) { %>
                                        <div class="connector-h"></div>
                                    <% } %>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <!-- Niveaux de direction avec même couleur -->
                            <% niveau.membres.forEach(membre => { %>
                                <div class="box" style="background-color: <%= niveau.couleur %>;">
                                    <div class="box-name"><%= membre.nom %></div>
                                    <div class="box-poste"><%= membre.poste %></div>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>

                    <% if (index < organigramme.niveaux.length - 1) { %>
                        <div class="connector-v"></div>
                    <% } %>
                <% }); %>
            </div>
        </div>

        <div class="nav-buttons">
            <a href="/" class="btn">← Retour aux Profils</a>
        </div>
    </div>
</body>
</html>
