<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cartes Profil</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1 class="title">Nos Professionnels</h1>
        
        <div class="cards-grid">
            <% profiles.forEach(profile => { %>
                <div class="id-card">
                    <!-- Haut de la carte avec informations principales -->
                    <div class="id-card-top">
                        <div class="id-card-left">
                            <img src="<%= profile.avatarUrl %>" alt="<%= profile.prénom %> <%= profile.nom %>" class="id-avatar">
                        </div>
                        <div class="id-card-right">
                            <h2 class="id-name"><%= profile.prénom %> <%= profile.nom %></h2>
                            <p class="id-position"><%= profile.poste %></p>
                            
                            <div class="id-info">
                                <p><strong>Études :</strong> <%= profile.études %></p>
                                <p><strong>Tâches :</strong> <%= profile.tâches %></p>
                                <p><strong>Utilise IA :</strong> <%= profile.utiliseIA %></p>
                            </div>
                        </div>
                    </div>

                    <!-- Bas de la carte avec avantages/inconvénients -->
                    <div class="id-card-bottom">
                        <div class="id-column advantages">
                            <h3>Avantages</h3>
                            <ul>
                                <% profile.avantages.forEach(avantage => { %>
                                    <li>- <%= avantage %></li>
                                <% }); %>
                            </ul>
                        </div>

                        <div class="id-column inconvenient">
                            <h3>Inconvénient</h3>
                            <ul>
                                <% profile.inconvénients.forEach(inconvenient => { %>
                                    <li>- <%= inconvenient %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
